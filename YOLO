import cv2
from ultralytics import YOLO

# Load pretrained YOLOv8n model (lightweight)
model = YOLO("yolov8n.pt")

# Move model to GPU if available (optional)
# model.to('cuda')

# Video path
source = r"C:\Users\NIKHIL DHOOPAL\Videos\Captures\manema.mp4"
cap = cv2.VideoCapture(source)

# Output video settings
fourcc = cv2.VideoWriter_fourcc(*'mp4v')
fps = int(cap.get(cv2.CAP_PROP_FPS))
out_size = (640, 360)  # resized frame size
out = cv2.VideoWriter("output_cars_detected.mp4", fourcc, fps, out_size)

frame_count = 0
frame_skip = 2  # process every 2nd frame

while cap.isOpened():
    success, frame = cap.read()
    if not success:
        break

    frame_count += 1
    if frame_count % frame_skip != 0:
        continue

    # Resize frame for faster processing
    frame_resized = cv2.resize(frame, out_size)

    # Run inference
    results = model(frame_resized, conf=0.5)[0]

    # Keep only class 2 (cars)
    results.boxes = results.boxes[results.boxes.cls == 2]

    # Draw results
    annotated = results.plot()

    # Show (optional - slow, comment to disable)
    cv2.imshow("Car Detection", annotated)

    # Save frame
    out.write(annotated)

    # Exit if 'q' is pressed
    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

cap.release()
out.release()
cv2.destroyAllWindows()
